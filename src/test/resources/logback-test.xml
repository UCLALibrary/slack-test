<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%r [%t] %level %logger - %m%n</pattern>
    </encoder>
  </appender>

  <logger name="com.github.seratch.jslack.common.http.listener.DetailedLoggingListener" level="INFO">
    <appender-ref ref="STDOUT"/>
  </logger>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
